<body>

    <div id="notification-banner" class="fixed top-4 right-4 p-3 rounded-lg shadow-xl text-sm transition-transform duration-300 transform translate-x-full z-50"></div>

    <div class="max-w-6xl mx-auto space-y-8">
        <header class="text-center py-6 bg-white rounded-xl shadow-md border-b-4 border-indigo-500">
            <h1 class="text-3xl font-extrabold text-gray-800">Client Profile Search</h1>
            <p class="text-gray-500 mt-1">Search client history by email address.</p>
        </header>

        <!-- Search Bar Card -->
        <div class="card p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                   <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                 </svg>
                Find Client
            </h2>
            <div class="flex flex-col sm:flex-row gap-4">
                <input type="email" id="client-email-input" placeholder="Enter client email (e.g., client.b@mail.com)"
                       class="flex-grow p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500"
                       value="client.b@mail.com">
                <button onclick="searchClient()"
                        class="px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition shadow-md flex-shrink-0">
                    Search Profile
                </button>
            </div>
            <p id="search-status" class="text-sm mt-3 text-gray-500">Search results will appear here.</p>
        </div>

        <!-- CLIENT PROFILE DISPLAY AREA -->
        <div id="profile-container" class="space-y-6 hidden">
            <!-- Client Details Card -->
            <div class="card p-6 border-l-4 border-indigo-500">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">
                    Client Details: <span id="client-id-display" class="text-indigo-600"></span>
                </h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
                    <!-- NEW: Client Profile Information -->
                    <div>
                        <p class="text-sm text-gray-500">Client Name</p>
                        <p id="client-name-display" class="text-lg font-semibold text-gray-900">N/A</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500">Phone Number</p>
                        <p id="client-phone-display" class="text-lg font-semibold text-gray-900">N/A</p>
                    </div>
                    <div class="lg:col-span-3">
                        <p class="text-sm text-gray-500">Address</p>
                        <p id="client-address-display" class="text-lg font-semibold text-gray-900">N/A</p>
                    </div>
                    
                    <!-- Line separator (for visual clarity) -->
                    <div class="col-span-full border-t border-gray-100 mt-2 mb-2"></div>
                    
                    <!-- Existing: Order Counts -->
                    <div class="col-span-full sm:col-span-1">
                        <p class="text-sm text-gray-500">Total Orders Found</p>
                        <p id="total-orders-count" class="text-3xl font-extrabold text-gray-900">0</p>
                    </div>
                    <div class="col-span-full sm:col-span-1">
                        <p class="text-sm text-gray-500">Completed Orders</p>
                        <p id="completed-orders-count" class="text-3xl font-extrabold text-green-600">0</p>
                    </div>
                </div>
            </div>

            <!-- Order History Table -->
            <div class="card">
                <h3 class="text-xl font-bold text-gray-800 mb-4">Order History</h3>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Order ID</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Design & Fabric</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Assigned Employee</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">Submitted</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200" id="order-history-list">
                            <!-- Order rows will be injected here -->
                        </tbody>
                    </table>
                </div>
            </div>
