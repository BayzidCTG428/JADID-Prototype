                    <tbody class="bg-white divide-y divide-gray-200" id="orders-list">
                        <tr><td colspan="5" class="py-4 text-center text-gray-500">Loading assigned tasks...</td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <!-- MODAL: Order Detail (Re-used from Client Dashboard) -->
    <div id="order-modal" class="modal">
        <div class="modal-content">
            <h3 class="text-2xl font-bold mb-4 text-gray-800">Order Details: <span id="order-modal-id" class="text-emerald-600"></span></h3>
            <div class="space-y-4 pt-2">
                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div>
                        <p class="text-xs text-gray-500 font-medium">Client Email</p>
                        <p class="font-semibold text-gray-900" id="order-detail-client"></p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 font-medium">Design Style</p>
                        <p class="font-semibold text-gray-900" id="order-detail-design"></p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 font-medium">Fabric Type</p>
                        <p class="font-semibold text-gray-900" id="order-detail-fabric"></p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 font-medium">Current Status</p>
                        <span id="order-detail-status" class="order-status-pill"></span>
                    </div>
                </div>

                <div class="border-t pt-4">
                    <p class="text-base font-bold mb-2 text-gray-800">Measurements</p>
                    <div id="order-detail-measurements" class="text-sm text-gray-700 grid grid-cols-2 sm:grid-cols-3 gap-3">
                        <!-- Measurements will be injected here -->
                    </div>
                </div>
            </div>
            <div class="flex justify-end mt-6">
                <button onclick="closeOrderModal()" class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-medium">Close</button>
            </div>
        </div>
    </div>
    
    <!-- Firebase SDKs -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, onSnapshot, collection, query, where, doc, updateDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // --- Configuration ---
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
        
        // This is the employee we are simulating being logged in (must match an employeeEmail field in customOrders)
        const EMPLOYEE_EMAIL = "employee.a@mail.com"; 

        let app;
        let db;
        let auth;
        let adminUserId = null; // Admin ID is needed to access the private data store
        let isAuthReady = false;
        
        let orders = [];

        // --- UTILS ---

        function getCollectionPath(name) {
            if (!adminUserId) {
                console.error("Admin user not authenticated for collection access.");
                return null;
            }
            // All data is stored under the main admin's private path.
            return `artifacts/${appId}/users/${adminUserId}/${name}`; 
        }

        // Simple notification display instead of alert()
        function showNotification(message, type = 'info') {
            const notifEl = document.getElementById('notification-banner');
            notifEl.textContent = message;
            
            notifEl.className = 'fixed top-4 right-4 p-3 rounded-lg shadow-xl transition-transform duration-300 transform translate-x-full z-50 text-white';
            
            if (type === 'success') {
                notifEl.classList.add('bg-green-600');
            } else if (type === 'error') {
                notifEl.classList.add('bg-red-600');
            } else {
                 notifEl.classList.add('bg-blue-600');
            }
            
            // Show notification
            setTimeout(() => {
                notifEl.classList.remove('translate-x-full');
                notifEl.classList.add('translate-x-0');
            }, 50);

            // Hide notification
            setTimeout(() => {
                notifEl.classList.remove('translate-x-0');
                notifEl.classList.add('translate-x-full');
            }, 4000);
        }
        
        // --- FIREBASE INITIALIZATION AND AUTHENTICATION ---
        try {
            app = initializeApp(firebaseConfig);
            db = getFirestore(app);
            auth = getAuth(app);
        } catch (e) {
            console.error("Firebase Initialization Error:", e);
        }

        onAuthStateChanged(auth, async (user) => {
            if (user) {
                adminUserId = user.uid; // We use the current user's UID (which is the Admin ID)
                isAuthReady = true;
                startEmployeeListeners();
                document.getElementById('employee-email').textContent = EMPLOYEE_EMAIL;
            } else {
                try {
                    if (initialAuthToken) {
                        await signInWithCustomToken(auth, initialAuthToken);
                    } else {
                        await signInAnonymously(auth);
                    }
                } catch (error) {
                    console.error("Auth Sign-in Error:", error);
                }
            }
        });

        // --- REAL-TIME LISTENERS ---

        function startEmployeeListeners() {
            if (!isAuthReady || !db) return;

            // Listen for orders assigned to this specific employee
            try {
                const orderQuery = query(
                    collection(db, getCollectionPath('customOrders')),
                    where('employeeEmail', '==', EMPLOYEE_EMAIL)
                );
                
                onSnapshot(orderQuery, (snapshot) => {
                    orders = [];
                    let receivedCount = 0;
                    let processingCount = 0;
                    
                    snapshot.forEach((doc) => {
                        const order = { id: doc.id, ...doc.data() };
                        orders.push(order);
                        
                        if (order.status === 'Received') receivedCount++;
                        if (order.status === 'Processing') processingCount++;
                    });
                    
                    // Sort by status (Received first) and then by newest first
                    orders.sort((a, b) => {
                        if (a.status === 'Received' && b.status !== 'Received') return -1;
                        if (a.status !== 'Received' && b.status === 'Received') return 1;
                        return (b.timestamp?.toDate() || 0) - (a.timestamp?.toDate() || 0);
                    });

                    document.getElementById('count-received').textContent = receivedCount;
                    document.getElementById('count-processing').textContent = processingCount;
                    
                    renderOrders();
                }, (error) => {
                    console.error("Error listening to employee orders:", error);
                });

            } catch (e) {
                console.error("Could not set up orders listener:", e);
            }
        }
        
        // --- DATA MUTATION ---

        window.updateOrderStatus = async function(orderId, newStatus) {
            if (!db || !adminUserId) {
                showNotification("Database connection failed. Cannot update status.", 'error');
                return;
            }

            const orderRef = doc(db, getCollectionPath('customOrders'), orderId);
            
            try {
                // Perform the update
                await updateDoc(orderRef, {
                    status: newStatus
                });
                showNotification(`Order ${orderId.substring(0, 6)} status updated to '${newStatus}'.`, 'success');
            } catch (error) {
                console.error("Error updating order status:", error);
                showNotification("Failed to update status. Check console for details.", 'error');
            }
        }
        
        // --- RENDERING FUNCTIONS ---

        function renderOrders() {
            const listEl = document.getElementById('orders-list');
            listEl.innerHTML = '';
            
            if (orders.length === 0) {
                listEl.innerHTML = `<tr><td colspan="5" class="py-4 text-center text-gray-500">No custom orders are currently assigned to you.</td></tr>`;
                return;
            }

            orders.forEach(order => {
                const statusClass = `status-${order.status.replace(/\s/g, '')}`;
                const tr = document.createElement('tr');
                tr.className = 'hover:bg-gray-50';
                
                let actionButton = '';
                if (order.status === 'Received') {
                    actionButton = `<button onclick="updateOrderStatus('${order.id}', 'Processing')" class="px-3 py-1 bg-indigo-500 text-white rounded-md text-xs font-medium hover:bg-indigo-600 transition shadow-sm">Start Work</button>`;
                } else if (order.status === 'Processing') {
                    actionButton = `<button onclick="updateOrderStatus('${order.id}', 'Completed')" class="px-3 py-1 bg-emerald-500 text-white rounded-md text-xs font-medium hover:bg-emerald-600 transition shadow-sm">Mark Complete</button>`;
                } else {
                    actionButton = `<span class="text-gray-500 text-xs">No action needed</span>`;
                }

                tr.innerHTML = `
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-mono text-gray-800">${order.orderId || order.id.substring(0, 6)}</td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-900">
                        <span class="font-semibold">${order.clientEmail}</span>
                        <br>
                        <span class="text-xs text-gray-500">${order.designStyle} in ${order.fabricType}</span>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap"><span class="order-status-pill ${statusClass}">${order.status}</span></td>
                    <td class="px-4 py-3 whitespace-nowrap">${actionButton}</td>
                     <td class="px-4 py-3 whitespace-nowrap">
                        <button onclick="openOrderModal('${order.id}')" class="text-gray-600 hover:text-gray-900 text-sm font-medium">View Specs</button>
                    </td>
                `;
                listEl.appendChild(tr);
            });
        }
        
        // --- MODAL FUNCTIONS: ORDERS ---

        window.openOrderModal = function(orderDocId) {
            const order = orders.find(o => o.id === orderDocId);
            if (!order) return;
            
            document.getElementById('order-modal-id').textContent = order.orderId || order.id.substring(0, 6);
            document.getElementById('order-detail-client').textContent = order.clientEmail;
            document.getElementById('order-detail-design').textContent = order.designStyle;
            document.getElementById('order-detail-fabric').textContent = order.fabricType;
            
            const statusEl = document.getElementById('order-detail-status');
            statusEl.textContent = order.status;
            statusEl.className = `order-status-pill status-${order.status.replace(/\s/g, '')}`;
            
            // Render Measurements
            const measEl = document.getElementById('order-detail-measurements');
            measEl.innerHTML = '';
            const m = order.measurements || {};
            for (const key in m) {
                 if (key !== 'unit') {
                    measEl.innerHTML += `<p class="font-semibold capitalize text-gray-700">${key}: <span class="font-normal text-gray-800">${m[key]} ${m.unit || 'cm'}</span></p>`;
                 }
            }

            document.getElementById('order-modal').style.display = 'flex';
        }

        window.closeOrderModal = function() {
            document.getElementById('order-modal').style.display = 'none';
        }
    </script>
</body>
</html>
